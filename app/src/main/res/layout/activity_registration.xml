<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/registra"
    android:orientation="vertical"
    tools:context=".Registration">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="120dp"
        android:text="Registeration"
        android:textColor="#FDFAFA"
        android:textSize="35dp" />


    <EditText
        android:id="@+id/editText5"
        android:layout_width="245dp"
        android:layout_height="45dp"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="92dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/ripple2"
        android:ems="10"
        android:fadingEdge="horizontal"
        android:paddingLeft="10dp"
        android:hint="Enter name"
        android:inputType="textPersonName"
        android:textColor="#FC0C0C0C" />

    <EditText
        android:id="@+id/editText9"
        android:layout_width="245dp"
        android:layout_height="45dp"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/ripple2"
        android:drawableLeft="@drawable/mail"
        android:ems="10"
        android:hint="e-mail ID"
        android:paddingLeft="10dp"
        android:inputType="textEmailAddress"
        android:textColor="#FC0C0C0C" />

    <EditText
        android:id="@+id/editText10"
        android:layout_width="245dp"
        android:layout_height="45dp"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/ripple2"
        android:drawableLeft="@drawable/call"
        android:paddingLeft="10dp"
        android:ems="10"
        android:hint="Mobile No."
        android:inputType="phone"
        android:textColor="#FC0C0C0C" />

    <EditText
        android:id="@+id/editText11"
        android:layout_width="245dp"
        android:layout_height="45dp"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/ripple2"
        android:drawableLeft="@drawable/postal"
        android:ems="10"
        android:hint="Postal Address"
        android:paddingLeft="10dp"
        android:inputType="textPostalAddress"
        android:textColor="#FC0C0C0C" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="245dp"
        android:layout_height="45dp"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/ripple2"
        android:drawableLeft="@drawable/lock"
        android:ems="10"
        android:hint="Enter Password"
        android:paddingLeft="10dp"
        android:inputType="textPersonName"
        android:textColor="#FC0C0C0C" />

    <Button
        android:id="@+id/button"
        android:layout_width="138dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="37dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/ripple"
        android:textAllCaps="false"
        android:text="Sign Up"
        android:textSize="20dp"
        android:textColor="#FBFCFD"
         />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="15dp"
            android:text="Already Register?"
            android:textColor="#888484"
            android:textSize="25dp"
             />
        <TextView
            android:id="@+id/imageButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginRight="3dp"
            android:text="Login Here"
            android:textColor="#E57C04"
            android:textSize="25dp"
            />


    </LinearLayout>


</LinearLayout>
