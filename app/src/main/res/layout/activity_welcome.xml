<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bcgr"
    android:orientation="vertical"
    tools:context=".welcome">

    <TextView
        android:id="@+id/textView26"
        android:layout_width="234dp"
        android:layout_height="76dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="70dp"
        android:text="Welcome!"
        android:textColor="#FFFEFE"
        android:textSize="@android:dimen/app_icon_size"
        android:textStyle="bold"
        app:fontFamily="@font/pacifico" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="70dp"
        android:text="Nice to see you again!"
        android:textColor="#F9F8F8"
        android:textSize="25dp" />

    <Button
        android:id="@+id/button7"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="59dp"
        android:layout_marginTop="21dp"
        android:layout_marginRight="70dp"
        android:background="@drawable/ripple"
        android:gravity="center"
        android:text="Login"
        android:textAllCaps="false"
        android:textColor="#FFFFFEFE"
        android:textSize="25dp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="490dp"
            android:text="You are not a member?"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/textView29"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="490dp"
            android:text="Register"
            android:textColor="#E57C04"
            android:textSize="25dp" />

    </LinearLayout>

</LinearLayout>